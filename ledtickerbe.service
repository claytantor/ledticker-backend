[Unit]
Description=ledtickerbe
After=multi-user.target

[Service]
ExecStart=/home/pi/projects/ledticker-backend/venv/bin/python -u /home/pi/projects/ledticker-backend/ledtickerbe.py --config /home/pi/projects/ledticker-backend/config.yaml
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ledtickerbe
Restart=always
User=root

[Install]
WantedBy=multi-user.target